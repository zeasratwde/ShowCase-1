@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a  data-toggle="tooltip" data-placement="bottom" title="2-factor Authentication" href="@Url.Action("Register", "Account")">Register</a></li>
        <li><a data-toggle="tooltip" data-placement="bottom" title="OAuth 2.0 Authentication" href="@Url.Action("Login", "Account")">Login</a></li>
    </ul>
}
